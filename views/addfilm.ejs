<html ng-app="app.cinemas">
        
        <head>
            <title>Node/Angular Todos</title>
    
             <!-- load Google Fonts  -->
            <link href="//fonts.googleapis.com/css?family=Paytone+One|Quicksand&amp;subset=latin-ext,vietnamese" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Oswald:700&amp;subset=latin-ext,vietnamese" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
            <!-- load CDN stye -->
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
            <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.8.1/css/xeditable.min.css"/>
            
            <!-- load cdn scripts -->
            <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.6.6/angular.min.js"></script>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.8.1/js/xeditable.min.js"></script>
            <!-- load css -->
            <link rel="stylesheet" href="assets/css/style.css">
            <!-- load app -->
            <script src="assets/js/main/app.js"></script>
            <script src="assets/js/main/services/svCinemas.js"></script>
        
    
            <link rel="stylesheet" href="assets/stylesheets/style.css">
            <script src="assets/javascripts/setting.js"></script>
            <script src="assets/javascripts/main.js"></script>
            <link rel="stylesheet" href="assets/stylesheets/loader.css">
        </head>
        
        <link rel="stylesheet" href="assets/stylesheets/film/create.css">
        <script src="assets/javascripts/film/create.js"></script>
    
        <body ng-controller="cinemaController">
            <div class="container ">  
                <div class="jumbotron text-center ">
                    <h1>{{ appName}}<span class="label label-info">{{todos.length}}</span></h1>
                </div>
                <div class="container animated">
                    <div class="form-group">
                        <h4>Tên bộ phim:</h4>
                        <input class="form-control my-input-film" type="text" id="filmName" ng-model="formData.tenphim">
                    </div>
    
                    <div class="form-group">
                        <h4>Thể loại phim:</h4>
                        <select ng-options="theloai for theloai in theloai" ng-model="formData.theloai" class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                    </select>
                    </div>
    
                    <!-- <div class="form-group">
                    <h4> Thời gian phát hành: </h4>
                    <input class="form-control my-input-film" type="month" id="yearFilm" min="1900-01" value="2017-08" max="2030-12">
                </div> -->
    
                    <div class="form-group">
                        <h4> Thời gian phát hành: </h4>
                        <select ng-options="thang for thang in thang" ng-model="formData.thang" class="col-lg-5 col-md-5 col-sm-5 col-xs-5" id="filmMonth"></select>
    
                        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        </div>
    
                        <select ng-options="nam for nam in nam" ng-model="formData.nam" class="col-md-5 col-sm-5 col-lg-5 col-xs-5"></select>
                    </div>
    
                    <div class="form-group">
                        <h4> Nội dung mô tả:</h4>
                        <textarea class="form-control col-sm-12 col-md-12 my-input-film" id="filmContent" rows="5" placeholder="Điền thông tin thêm về bộ phim, như diễn viên chính, nội dung bộ phim,..." ng-model="formData.noidung"></textarea>
                    </div>
                    <div class="form-group">
                            <h4> Địa chỉ hình ảnh:</h4>
                            <textarea class="form-control col-sm-12 col-md-12 my-input-film" id="filmContent" placeholder="Nhập địa chỉ hình ảnh để hiển thị" ng-model="formData.image_url"></textarea>
                        </div>
                    <br/>
                    <div class="container my-container-center my-bot-form">      
                        <button type="submit" class="btn btn-primary my-btn text-center animated slideInUp" style="margin-right:15px" ng-disabled="!formData.tenphim" ng-click="createCinema()">
                                <i class="fa fa-upload fa-lg" aria-hidden="true"></i>
                            Đăng phim
                        </button>
                    </div>
                </div>   
            </div>
        </body>
        <footer>
            <h3>Copyright Cinema Box</h3>
        </footer>
        </html>